@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username");
    var genres = ViewBag.Genres as List<Genre>;
    ViewData["Title"] ??= "Kütüphane";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Kütüphane</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom.css" />

    @RenderSection("Styles", required: false)

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom" style="position: relative; z-index: 1050;">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Logo1.png" alt="Logo" class="d-block logo-img" style="height: 100%; max-height: none;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="List">Kitaplar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Author" asp-action="List">Yazarlar</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="genreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Türlerine Göre Kitaplar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="genreDropdown" style="z-index:1060; position:absolute;">
                                @if (genres != null && genres.Any())
                                {
                                    foreach (var genre in genres)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Book" asp-action="BooksByGenre" asp-route-id="@genre.Id">
                                                @genre.GenreName
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item disabled">Türler Yüklenemedi</span></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LoginUser" asp-action="Login">Yetkili İşlemleri</a>
                        </li>
                    </ul>


                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <span class="navbar-text me-3">Hoşgeldiniz, @username!</span>
                            <form asp-controller="LoginUser" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-danger">Çıkış Yap</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="LoginUser" asp-action="Login" class="btn btn-outline-light">Giriş Yap</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <main class="container flex-grow-1 mt-4">
        @RenderBody()
    </main>

    <footer class="footer-custom py-3 mt-4 border-top text-center">
        <div class="container">
            <span>© 2025 Şive Özdemir tarafından geliştirilmiştir. Tüm hakları saklıdır.</span>
        </div>
    </footer>


    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
