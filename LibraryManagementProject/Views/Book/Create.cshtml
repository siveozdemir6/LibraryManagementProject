@model BookCreateViewModel

@{
    ViewData["Title"] = "Yeni Kitap Ekle";
    var authors = ViewBag.Authors as List<SelectListItem>;
    var genres = ViewBag.GenresSelectList as List<SelectListItem>;
}

<h2 class="text-center mb-4 fw-bold">➕ Yeni Kitap Ekle</h2>

<partial name="_TempMessagesPartial" />

<div class="card-custom">
    <form asp-action="Create" method="post" class="row g-4">

        <div class="col-md-6">
            <label asp-for="Title" class="form-label"> 📖 Kitap Adı</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="AuthorId" class="form-label d-flex justify-content-between">
                <span>👤 Yazar</span>
                <a asp-controller="Author" asp-action="CreateFromBook" class="btn btn-outline-info">➕ Yazar Ekle</a>
            </label>
            <select asp-for="AuthorId" asp-items="authors" class="form-select">
                <option value="">-- Yazar Seçin --</option>
            </select>
            <span asp-validation-for="AuthorId" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="GenreId" class="form-label d-flex justify-content-between">
                <span> 🏷️ Tür</span>
                <a asp-controller="Genre" asp-action="CreateFromBook" class="btn btn-outline-info ">➕ Tür Ekle</a>
            </label>
            <select asp-for="GenreId" asp-items="genres" class="form-select">
                <option value="">-- Tür Seçin --</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PublishDate" class="form-label">📅 Yayın Tarihi</label>
            <input asp-for="PublishDate" type="date" class="form-control" />
            <span asp-validation-for="PublishDate" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ISBN" class="form-label">🔢 ISBN</label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PageCount" class="form-label">📄 Sayfa Sayısı</label>
            <input asp-for="PageCount" type="number" class="form-control" />
            <span asp-validation-for="PageCount" class="text-danger small"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="Description" class="form-label">📝 Açıklama</label>
            <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TotalCopies" class="form-label">📦 Mevcut Kopya</label>
            <input asp-for="TotalCopies" type="number" class="form-control" />
            <span asp-validation-for="TotalCopies" class="text-danger small"></span>
        </div>

        <div class="col-md-12 text-end mt-3">
            <button type="submit" class="btn btn-custom me-2">💾 Kaydet</button>
            <a asp-action="List" class="btn btn-back">🔙 Listeye Dön</a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
